<Window x:Class="Self_App.myWindows.TagWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Self_App.myWindows"
        mc:Ignorable="d"
        Title="Tag" Height="150" Width="500" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="20"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <ComboBox Grid.Column="1" Grid.Row="1" IsEditable="True" Style="{DynamicResource ComboBoxStyle1}" Padding="5">
            <ComboBoxItem Content="Tag1"/>
            <ComboBoxItem Content="Tag2"/>
        </ComboBox>

        <Button Grid.Column="1" Grid.Row="2" Margin="0,20,0,0" HorizontalAlignment="Center" Content="Add"/>
    </Grid>
</Window>
